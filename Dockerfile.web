FROM python:3.12-slim

WORKDIR /app

# Install sherlock and web dependencies
COPY pyproject.toml poetry.lock* ./
COPY sherlock_project/ ./sherlock_project/
COPY sherlock_web/ ./sherlock_web/

# Install dependencies
RUN pip install --no-cache-dir poetry && \
    poetry config virtualenvs.create false && \
    poetry install --only main --no-interaction && \
    pip install --no-cache-dir fastapi uvicorn[standard] websockets

# Create data directory for SQLite
RUN mkdir -p /data
ENV SHERLOCK_DB_PATH=/data/sherlock_web.db

EXPOSE 8501

CMD ["python", "-m", "uvicorn", "sherlock_web.app:app", "--host", "0.0.0.0", "--port", "8501"]
